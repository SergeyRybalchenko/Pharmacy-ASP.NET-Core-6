@using Microsoft.AspNetCore.Identity
@using Pharmacy.Areas.Identity.Data

@inject SignInManager<PharmacyUser> SignInManager
@inject UserManager<PharmacyUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profile</a>
        <a id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
}
else
{
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
}

